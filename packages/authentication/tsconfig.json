{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017",
      "ES2019.Object"
    ],
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "composite": true,
    "tsBuildInfoFile": "./build_info.json",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".tsc-out",
  },
  "include": [
    "types/*",
    "src/**/*.ts"
  ],
  "references": [
    { "path": "../agent" },
  ]
}
